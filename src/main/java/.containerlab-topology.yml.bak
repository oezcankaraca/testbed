name: containerlab-topology
prefix: p2p

mgmt:
  network: fixedips
topology:
  nodes:
    lectureStudioServer:
      kind: linux
      image: image-testbed
      labels:
        role: sender
        group: server
      binds:
        - /home/ozcankaraca/Desktop/mydocument.pdf:/app/mydocument.pdf
        - /home/ozcankaraca/Desktop/testbed/src/resources/results/connection-details.json:/app/connection-details.json
        - /home/ozcankaraca/Desktop/testbed/src/resources/skripts/connections-source.sh:/app/connections-source.sh
      exec:
        - echo "Waiting for 5 seconds..."
        - sleep 5
        - chmod +x /app/connections-source.sh
        - ./connections-source.sh
      env:
        SOURCE_PEER: lectureStudioServer
        TARGET_PEERS: 1,2,3,4,5,6
        CONNECTION_6: eth6;172.20.26.2, 172.20.26.3
        CONNECTION_5: eth5;172.20.25.2, 172.20.25.3
        CONNECTION_4: eth4;172.20.24.2, 172.20.24.3
        CONNECTION_3: eth3;172.20.23.2, 172.20.23.3
        CONNECTION_2: eth2;172.20.22.2, 172.20.22.3
        CONNECTION_1: eth1;172.20.21.2, 172.20.21.3
        MAIN_CLASS: LectureStudioServer
      ports:
        - "8080:8080"

    1:
      kind: linux
      image: image-testbed
      env:
        IP_ADDRES: 172.20.21.3
        SUPER_PEER: lectureStudioServer
        MAIN_CLASS: Peer
      labels:
        role: receiver
        group: peer
      binds:
        - /home/ozcankaraca/Desktop/testbed/src/resources/results/connection-details.json:/app/connection-details.json
        - /home/ozcankaraca/Desktop/testbed/src/resources/skripts/connections-target.sh:/app/connections-target.sh
