name: containerlab-topology
prefix: p2p

mgmt:
  network: fixedips
  ipv4-subnet: 172.100.100.0/24
  ipv6-subnet: 2001:172:100:100::/80

topology:
  nodes:
    lecturestudioserver:
      kind: linux
      image: image-lecturestudioserver
      mgmt-ipv4: 172.100.100.11       # set ipv4 address on management network
      mgmt-ipv6: 2001:172:100:100::11 # set ipv6 address on management network
      labels:
        role: sender
        group: server
      binds:
        - /home/ozcankaraca/Desktop/mydocument.pdf:/app/mydocument.pdf
      env:
        TARGET_PEERS: 1
      ports:
        - "8080:8080"

    1:
      kind: linux
      image: image-peer
      mgmt-ipv4: 172.100.100.12       # set ipv4 address on management network
      mgmt-ipv6: 2001:172:100:100::12 # set ipv6 address on management network
      env:
        SUPER_PEER: lectureStudioServer
      labels:
        role: receiver
        group: peer


